@model IEnumerable<Domain.Models.Abonnement_ClientModel>

@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-12 mb-2 mt-1">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <div class="breadcrumb-wrapper col-12">
                            <ol class="breadcrumb p-0 mb-0">
                                <li class="breadcrumb-item">
                                    <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="javascript:history.go(-1)"><i class="bx bxs-left-arrow-circle"></i></a>
                                </li>
                                <li class="breadcrumb-item active">
                                    <a asp-area="">Liste des clients </a>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Dashboard Ecommerce Starts -->
            <section id="dashboard-ecommerce">
                <div class="row">
                    <!-- Greetings Content Starts -->
                    <div class="col-xl-12 col-md-12 col-12 dashboard-greetings">
                        <div class="card">
                            <div class="card-header">
                                <a class="heading-elements-toggle">
                                    <i class="bx bx-dots-vertical font-medium-3"></i>
                                </a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li>
                                            <a data-action="collapse">
                                                <i class="bx bx-chevron-down"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-action="expand">
                                                <i class="bx bx-fullscreen"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-action="reload">
                                                <i class="bx bx-revision"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collapse show">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <!-- table success start -->
                                            <section id="table-success">
                                                <div class="card">
                                                    <!-- datatable start -->
                                                    <div class="table">
                                                        <table id="table-Cartographie-Deposees" class="table mb-0">
                                                            <thead>
                                                                <tr>

                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Nom Client</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">E-mail</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">ICE</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Telephone</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Actions</th>

                                                                </tr>
                                                            </thead>
                                                            <tbody id="usertbody">
                                                                @foreach (var item in Model)
                                                                {
                                                    <tr>
                                                        <td class="border-b dark:border-dark-5">@Html.DisplayFor(modelItem => item.Abonnement_NomClient)</td>
                                                        <td class="border-b dark:border-dark-5">@Html.DisplayFor(modelItem => item.Abonnement_ContactEmail)</td>
                                                        <td class="border-b dark:border-dark-5">@Html.DisplayFor(modelItem => item.Abonnement_ICE)</td>
                                                        <td class="border-b dark:border-dark-5">@Html.DisplayFor(modelItem => item.Abonnement_ContactTelephone)</td>


                                                        <td>
                                                            <div class="dropdown">
                                                                <span class="bx bx-dots-horizontal-rounded font-medium-3 dropdown-toggle nav-hide-arrow cursor-pointer" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" role="menu">
                                                                </span>
                                                                <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 19px, 0px);" x-out-of-boundaries="">
                                                                    <button class="dropdown-item btn-outline-secondary" onclick="modification(@item.Abonnement_Id)"><i class="bx bx-pencil "></i> Modifer </button>
                                                                    <button class="dropdown-item btn-outline-danger" onclick="deleteClient(@item.Abonnement_Id)"  ><i class="bx bx-trash-alt"></i> Supprimer </button>
                                                                </div>
                                                            </div>
                                                        </td>




                                                    </tr>}
                                                            </tbody>
                                                        </table>

                                                    </div>
                                                    <!-- datatable ends -->
                                                </div>
                                            </section>
                                            <!-- table success ends -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </section>
            <!-- Dashboard Ecommerce ends -->
            <div class="breadcrumb-item ">
                <a class="btn btn-outline-success round mr-1 mb-1" asp-action="Ajouter" asp-controller="Clients"><i class="bx bx-user-plus"></i><span class="align-middle ml-25">Ajouter un client </span></a>
            </div>
        </div>
    </div>
</div>






<script>
    @if (TempData["Creation"] != null)
        {
            <text>CreationNotifications();</text>
        }

    @if (TempData["Modification"] != null)
        {
            <text>ModificationNotifications();</text>
        }
    function CreationNotifications() {
        ShowNotification("Client enregistré avec succés.", NotifToaster.SucessType, NotifToaster.Top_Full_Width);
    }

    function ModificationNotifications() {
        ShowNotification("Client modifié avec succés.", NotifToaster.SucessType, NotifToaster.Top_Full_Width);
    }
    function ChangeStyle() {
        $('#BetonnierMobile').addClass('menu--active');
        $('#Betonnier').addClass('top-menu--active');
        $('#Titre').text('Bétonnier');
        $('#SousTitre').text('Liste des Bétonniers');
    }

    function checktable() {
            if ($("#tableBetonnier tbody tr").length == 0) {
                document.getElementById('tableBetonnier').style.display = "none";
            }
        }

        function deleteClient(id) {
            var data = { id: id };
            $.ajax({
                url: '@Url.Action("deleteClient", "Clients")',
                type: "POST",
                cache: false,
                async: true,
                data: data,
                success: function (data) {
                    if (data == true) {
                        ShowNotification("Client désactivé avec succés.", NotifToaster.SucessType, NotifToaster.Top_Full_Width);
                        setTimeout(
                            function () {
                                window.location.href = '@Url.Action("ListeClient", "Clients")';
                                if ($("#tableBetonnier tbody tr").length == 0) {
                                    document.getElementById('tableBetonnier').style.display = "none";
                                }
                                }, 3000);

                    } else {
                        ShowNotification("Une erreur s'est produite!", NotifToaster.ErrorType, NotifToaster.Top_Full_Width);
                        setTimeout(
                            function () {
                                   window.location.href = '@Url.Action("ListeClient", "Client")';
                                }, 3000);
                    }
                },
                error: function () {
                    alert("non supprime");
                }
            });
        }
    function modification(id)
    {
        window.location.href = '@Url.Action("Modification", "Clients")/' + id;
    }
</script>