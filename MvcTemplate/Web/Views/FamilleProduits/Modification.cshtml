@model Domain.Models.FamilleProduitModel

@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-12 mb-2 mt-1">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <h5 class="content-header-title float-left pr-1 mb-0">Gestion de Famille de produit</h5>
                        <div class="breadcrumb-wrapper col-12">
                            <ol class="breadcrumb p-0 mb-0">
                                <li class="breadcrumb-item">
                                    <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="javascript:history.go(-1)"><i class="bx bxs-left-arrow-circle"></i></a>
                                </li>
                                <li class="breadcrumb-item active">
                                    <a asp-action="ListeProduits">Liste des familles</a>
                                </li>
                                <li class="breadcrumb-item active">
                                    <a href="#">Ajouter famille de produits</a>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <section id="basic-form-layouts">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title" id="basic-layout-form"> Modifier une famille de produit.</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="px-3">
                        <form class="form" asp-action="Modification" method="post">
                            <div class="form-body">
                                <h4 class="form-section">
                                    <i class="icon-user"></i> Details du Famille
                                </h4>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="Libelle"> Nom de Famille</label>
                                            <input type="text" asp-for="FamilleProduit_Libelle" class="form-control" required />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="custom-file">
                                            <input type="file" name="files" class="custom-file-input" id="fileinput" required>
                                            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="form-actions">
                                <a class="btn btn-danger" asp-action="ListeFamilleProduit">
                                    Annuler
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="icon-note"></i> Ajouter
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>

</div>

