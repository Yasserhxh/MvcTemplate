@{
    ViewData["Title"] = "Bon de commande";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
@model Domain.Models.BonDeCommande_Model

@{
    ViewData["Title"] = "Ajouter un bon de commande";
}

<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-12 mb-2 mt-1">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <div class="breadcrumb-wrapper col-12">
                            <ol class="breadcrumb p-0 mb-0">
                                <li class="breadcrumb-item">
                                    <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="javascript:history.go(-1)"><i class="bx bxs-left-arrow-circle"></i></a>
                                </li>
                                <li class="breadcrumb-item active">
                                    <a asp-action="ListeBonDeCommande">Liste des bons de commande</a>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Dashboard Ecommerce Starts -->
            <section id="dashboard-ecommerce">
                <div class="row">
                    <!-- Greetings Content Starts -->
                    <div class="col-xl-12 col-md-12 col-12 dashboard-greetings">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Ajouter un bon de commande</h4>
                                <a class="heading-elements-toggle"> <i class="bx bx-dots-vertical font-medium-3"></i> </a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li> <a data-action="collapse"> <i class="bx bx-chevron-down"></i> </a> </li>
                                        <li> <a data-action="expand"> <i class="bx bx-fullscreen"></i> </a> </li>
                                        <li> <a data-action="reload"> <i class="bx bx-revision"></i> </a> </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collapse show">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <!-- table success start -->

                                            <div class="card mb-1">
                                                <!-- form start -->
                                                <form class="needs-validation" novalidate>
                                                    <div class="form-row">
                                                        <div class="col-md-5 mb-1">
                                                            <label for="validationTooltip01">Libellé</label>
                                                            <div>
                                                                <input type="text" id="libelle" asp-for="FicheTechniqueBridge_Libelle" class="form-control" />
                                                            </div>
                                                        </div>
                                                        <div class="col-md-5 mb-2">
                                                            <label for="validationTooltip01">Produit maison</label>
                                                            <div>
                                                                <select class="custom-select" id="produit" data-search="true" asp-for="FicheTechniqueBridge_ProduitVendableID" asp-items="@ViewBag.FicheTechnique_ProduitVendableId" onchange="familleList()" required>
                                                                    <option value="" selected disabled>Sélectionnez un produit ...</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>
                                                <!-- form ends -->

                                                <fieldset>
                                                    <legend>Détails de la fiche technique</legend>
                                                    <div class="form-row">
                                                        <div class="col-md-3 mb-1">
                                                            <label for="validationTooltip01">Matière première</label>
                                                            <select class="custom-select" id="matiere" data-search="true" asp-for="@Model.Produit_FicheTechnique[0].FicheTechnique_MatierePremiereId" asp-items="@ViewBag.FicheTechnique_MatierePremiereId" onchange="UniteList()">
                                                                <option value="" selected disabled>Choisir une matière première ...</option>
                                                            </select>
                                                        </div>
                                                        <div class="col-md-3 mb-1">
                                                            <label for="QuantiteMatiere">Quantité</label>
                                                            <input id="quantite" type="number" min="0" step=".01" asp-for="@Model.Produit_FicheTechnique[0].FicheTechnique_QuantiteMatiere" class="form-control" />

                                                        </div>
                                                        <div class="col-md-3 mb-1">
                                                            <label for="UniteMesure"> Unité de mesure</label>
                                                            <div>
                                                                <select class="custom-select" id="unite" data-search="true" asp-for="@Model.Produit_FicheTechnique[0].FicheTechnique_UniteMesureId">
                                                                    <option value="" selected disabled>Choisir une unité de mesure ...</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class=" text-md-right">
                                                            <button class="btn btn-sm btn-success glow mt-md-2 mb-1" onclick="camionAdd()">Ajouter à la liste</button>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-12 mt-2">
                                                            <div class="table-responsive">
                                                                <table id="tableCamions" class="table mb-0">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Matière première</th>
                                                                            <th>Quantité</th>
                                                                            <th>Unité</th>
                                                                            <th>Prix</th>
                                                                            <th></th>
                                                                        </tr>
                                                                    </thead>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                   

                                                    
                                                </fieldset>
                                                <fieldset>
                                                    <legend>Produits de base</legend>
                                                    <div class="form-row">
                                                        <div class="col-md-3 mb-1">
                                                            <label for="validationTooltip02">Produit de base</label>
                                                            <select class="custom-select" id="prodbase" data-search="true" asp-for="@Model.FicheTech_ProduitBase[0].ProduitBase_ID" asp-items="@ViewBag.produitBase" >
                                                                <option value="" selected disabled>Choisissez un produit de base...</option>
                                                            </select>
                                                        </div>
                                                        <div class="col-md-3 mb-1">
                                                            <label for="QuantiteBase">Quantité</label>
                                                            <input id="quantitebase" type="number" min="0" step=".01" asp-for="@Model.FicheTech_ProduitBase[0].ProduitQte" class="form-control" />

                                                        </div>
                                                        <div class="col-md-3 mb-1">
                                                            <label for="UniteMesureBase"> Unité de mesure</label>
                                                            <div>
                                                                <select class="custom-select" id="unitebase" data-search="true" asp-for="@Model.FicheTech_ProduitBase[0].UniteMesure_ID" asp-items="@ViewBag.FicheTechnique_UniteMesureId">
                                                                    <option value="" selected disabled>Choisissez une unité de mesure ...</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class=" text-md-right">
                                                            <button class="btn btn-sm btn-success glow mt-md-2 mb-1" onclick="camionAdd2()">Ajouter à la liste</button>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-12 mt-2">
                                                            <div class="table-responsive">
                                                                <table id="tablebase" class="table mb-0">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Produit de base</th>
                                                                            <th>Quantité</th>
                                                                            <th>Unité</th>
                                                                            <th>Prix</th>
                                                                            <th></th>
                                                                        </tr>
                                                                    </thead>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </fieldset>
                                                <fieldset>
                                                    <legend>Formes de produit</legend>
                                                    <div class="form-row">
                                                        <div class="col-md-3 mb-1">
                                                            <label for="validationTooltip01">Forme de Produit</label>
                                                            <div>
                                                                <select class="custom-select" id="forme" data-search="true" asp-for="@Model.Fiche_Forme[0].Forme_Produit" required>
                                                                    <option value="" selected disabled>Sélectionnez une forme de produit ...</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3 mb-1">
                                                            <label for="QuantiteMatiere">Quantité</label>
                                                            <input id="qteforme" type="number" min="0" step=".01" class="form-control" asp-for="@Model.Fiche_Forme[0].FicheForme_Quantite" />

                                                        </div>
                                                        <div class="col-md-3 mb-1">
                                                            <label for="UniteMesure"> Unité de mesure</label>
                                                            <div>
                                                                <select class="custom-select" id="uniteforme" data-search="true" asp-for="@Model.Fiche_Forme[0].FicheForme_uniteMesure">
                                                                    <option value="" selected disabled>Choisir une unité de mesure ...</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class=" text-md-right">
                                                            <button class="btn btn-sm btn-success glow mt-md-2 mb-1" onclick="formeadd()">Ajouter à la liste</button>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-12 mt-2">
                                                            <div class="table-responsive">
                                                                <table id="tableForme" class="table mb-0">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Produit</th>
                                                                            <th>Forme de produit</th>
                                                                            <th>Quantité à produire</th>
                                                                            <th>Unité </th>
                                                                            <th></th>
                                                                        </tr>
                                                                    </thead>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </fieldset>
                                            </div>

                                            <!-- table success ends -->
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer d-flex justify-content-between border-top text-sm-right">
                                    <div>
                                        <button type="button" class="btn btn-success glow " style="display:none;"></button>
                                    </div><div>
                                        <button type="button" class="btn btn-success glow " style="display:none; "></button>
                                    </div><div>
                                        <button type="button" class="btn btn-success glow " style="display:none; "></button>
                                    </div><div>
                                        <button type="button" class="btn btn-success glow " id="disabled" onclick="AjoutTrpMoral()">Enregistrer la fiche technique</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Dashboard Ecommerce ends -->
        </div>
    </div>
</div>


<script src="~/js/toastr.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>