<style>
    .modal_panel_mask {
        background: #441c61;
        border: 1px solid #441c61;
        width: 310px;
        min-height: 300px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        box-shadow: 0px 24px 48px rgba(0, 0, 0, 0.25), 0 2px 4px -2px rgba(0,0,0,0.1);
        border-radius: 8px;
        padding: 16px;
        opacity: 0;
        margin-top: 48px;
        transition: all 0.3s ease-out;
    }





    .modal_panel_mask {
        opacity: 1;
        margin-top: 0;
        transition: all 0.3s ease-out 0.1s;
    }





    .modal_mask {
        background: rgba(0,0,0,0.0);
        background-size: 400% 400%;
        width: 100%;
        height: 100vh;
        position: absolute;
        z-index: 1000;
        transition: background 0.4s ease-out;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: all 0.3s ease-out;
    }





    .modal_mask {
        background: rgba(0,0,0,0.5);
        transition: background 0.4s ease-out;
    }

    .loader {
        margin: auto;
        position: absolute;
        bottom: 0;
        left: 0;
        top: 0;
        right: 0;
        height: 300px;
        width: 300px;
    }

        .loader .txt {
            text-align: center;
            font-family: 'El Messiri', sans-serif;
            position: relative;
            top: 75%;
            color: #fff
        }

        .loader .dot {
            position: absolute;
            transform: translate(-50%, -50%);
            top: 52.5%;
            left: 150px;
            height: 20px;
            width: 20px;
            background-color: #fff;
            border-radius: 5rem;
            transition: all 0.15s ease-in-out;
        }

            .loader .dot:nth-child(1) {
                left: 80px;
                animation: waveUp 2s, smallExtend 2s;
                animation-timing-function: ease-in-out;
                animation-iteration-count: infinite;
            }

            .loader .dot:nth-child(2) {
                left: 115px;
                animation: waveUp 2s, largeExtend 2s;
                animation-timing-function: ease-in-out;
                animation-iteration-count: infinite;
                animation-delay: 0.15s;
            }

            .loader .dot:nth-child(3) {
                animation: waveUp 2s, smallExtend 2s;
                animation-timing-function: ease-in-out;
                animation-iteration-count: infinite;
                animation-delay: 0.3s;
            }

            .loader .dot:nth-child(4) {
                left: 185px;
                animation: waveUp 2s, largeExtend 2s;
                animation-timing-function: ease-in-out;
                animation-iteration-count: infinite;
                animation-delay: 0.45s;
            }

            .loader .dot:nth-child(5) {
                left: 220px;
                animation: waveUp 2s, smallExtend 2s;
                animation-timing-function: ease-in-out;
                animation-iteration-count: infinite;
                animation-delay: 0.6s;
            }

    @@keyframes waveUp {
        0%,
        15% {
            top: 50%;
        }

        45%,
        65% {
            top: 42.5%;
        }

        85%,
        100% {
            top: 50%;
        }
    }

    @@keyframes smallExtend {
        0%,
        8% {
            background-color: #F8F8F8;
            height: 20px;
        }

        14%,
        34% {
            background-color: #F8F8F8;
            height: 47.5px;
        }

        46%,
        100% {
            background-color: #F8F8F8;
            height: 20px;
        }
    }

    @@keyframes largeExtend {
        0%,
        8% {
            background-color: #F8F8F8;
            height: 20px;
        }

        14%,
        34% {
            background-color: #F8F8F8;
            height: 82.5px;
        }

        46%,
        100% {
            background-color: #F8F8F8;
            height: 20px;
        }
    }
</style>
