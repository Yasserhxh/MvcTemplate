@model Domain.Models.Point_VenteModel

@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-12 mb-2 mt-1">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <div class="breadcrumb-wrapper col-12">
                            <ol class="breadcrumb p-0 mb-0">
                                <li class="breadcrumb-item">
                                    <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="javascript:history.go(-1)"><i class="bx bxs-left-arrow-circle"></i></a>
                                </li>
                                <li class="breadcrumb-item active">
                                    <a asp-action="ListePointVente">Liste des points ventes</a>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Dashboard Ecommerce Starts -->
            <section id="basic-form-layouts">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title-wrap bar-success">
                            <h4 class="card-title" id="basic-layout-form"> Modifier un point de vente</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="px-3">
                            <form class="form" asp-action="Modification" method="post">
                                <div class="form-body">
                                    <h4 class="form-section">
                                    </h4>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="PointVente_Nom">Point de vente</label>
                                                <input type="text" asp-for="PointVente_Nom" class="form-control" required />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="ville">Ville</label>
                                                <select class="custom-select" id="ville" data-search="true" asp-for="PointVente_VilleID" asp-items="@ViewBag.PointVente_VilleID">
                                                    <option value="" id="ville" selected disabled>Sélectionnez une ville...</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="Code Postal">Code Postal</label>
                                                <input type="number" id="code" class="form-control" asp-for="PointVente_CodePostal" required />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="Adresse">Adresse</label>
                                                <input type="text" asp-for="PointVente_Adresse" class="form-control" required />
                                            </div>
                                        </div>
                                    </div>
                                    <h4 class="form-section">
                                        <i class="icon-book-open"></i>Contact Info
                                    </h4>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="ContactName">Responsable</label>
                                                <select class="custom-select" id="inputGroupSelected02" data-search="true" asp-for="PointVente_NomResponsable" asp-items="@ViewBag.PointVente_NomResponsable" required>
                                                </select>
                                                @*<input type="text" asp-for="PointVente_NomResponsable" class="form-control" required />*@
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="Tel">Numéro de Téléphone </label>
                                                <input type="number" asp-for="PointVente_Telephone" class="form-control" maxlength="10" minlength="10" required />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="chef">Type de service</label>
                                                <select class="custom-select" id="service" data-search="true" asp-for="PointVente_TypeService">
                                                    <option value="" selected disabled>Sélectionnez un responsable de Vente...</option>
                                                    <option value="1">Service à table</option>
                                                    <option value="0">Service à emporter</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-actions text-sm-right">

                                    <button type="submit" class="btn btn-success">
                                        <i class="icon-note"></i> Modifier
                                    </button>
                                    <a class="btn btn-danger" asp-action="ListePointVente">
                                        Annuler
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </section>
            <!-- Dashboard Ecommerce ends -->
        </div>
    </div>
</div>
