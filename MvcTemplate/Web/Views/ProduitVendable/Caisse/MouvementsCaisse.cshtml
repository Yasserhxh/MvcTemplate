@model IEnumerable<Domain.Models.MouvementCaisseModel>
@{ Layout = "~/Views/Shared/_Layout1.cshtml"; }
@{ ViewData["Title"] = "Gestion de la caisse"; }
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-12 mb-2 mt-1">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <div class="breadcrumb-wrapper col-12">
                            <ol class="breadcrumb p-0 mb-0">
                                <li class="breadcrumb-item">
                                    <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="javascript:history.go(-1)"><i class="bx bxs-left-arrow-circle"></i></a>
                                </li>
                                <li class="breadcrumb-item active">
                                    <a href="#">Liste des mouvements </a>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Dashboard Ecommerce Starts -->
            <section id="dashboard-ecommerce">
                <div class="row">
                    <!-- Greetings Content Starts -->
                    <div class="col-xl-12 col-md-12 col-12 dashboard-greetings">
                        <div class="card">
                            <div class="card-header">
                                @if (Model.Count() > 0)
                                {<h4 class="card-title"> Liste des mouvements de @Model.ElementAt(0).Position_Vente.PositionVente_Libelle </h4>}
                                else { <h4 class="card-title"> Liste des mouvements</h4>
                                }
                                <a class="heading-elements-toggle">
                                    <i class="bx bx-dots-vertical font-medium-3"></i>
                                </a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li>
                                            <a data-action="collapse">
                                                <i class="bx bx-chevron-down"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-action="expand">
                                                <i class="bx bx-fullscreen"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-action="reload">
                                                <i class="bx bx-revision"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collapse show">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <!-- table success start -->
                                            <section id="table-success">
                                                <div class="card">
                                                    <!-- datatable start -->
                                                    <div class="table table-responsive  ">
                                                        <table id="table-Cartographie-Deposees" class="table mb-0">
                                                            <thead>
                                                                <tr>

                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Date de mouvement </th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Caisse</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Montant en Dh</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Type de Mouvement</th>
                                                                    @*                                                                    
                                                                        <th>Action</th>
                                                                    *@
                                                                </tr>
                                                            </thead>
                                                            <tbody id="usertbody">
                                                                @foreach (var item in Model)
                                                                {
                                                                <tr>
                                                                <td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.MouvementsCaisse_DateMouvement)</td>
                                                                <td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.Position_Vente.PositionVente_Libelle)</td>
                                                                <td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.MouvementsCaisse_Montant) DH</td>
                                                                @if (item.MouvementsCaisse_TypeID == 1)
                                                                {<td class="text-bold-600 pr-0 text-success"><i class="bx bx-check"></i>@item.MouvementCaisse_Type.TypeMouvementCaisse_Libelle</td> }
                                                                else if (item.MouvementsCaisse_TypeID == 2)
                                                                {<td class="text-bold-600 pr-0 text-danger"><i class="bx bx-check"></i>@item.MouvementCaisse_Type.TypeMouvementCaisse_Libelle</td> }
                                                                else if (item.MouvementsCaisse_TypeID == 3)
                                                                {<td class="text-bold-600 pr-0 text-success"><i class="bx bx-check"></i>@item.MouvementCaisse_Type.TypeMouvementCaisse_Libelle</td> }
                                                                else if (item.MouvementsCaisse_TypeID == 4)
                                                                {<td class="text-bold-600 pr-0 text-danger"><i class="bx bx-check"></i>@item.MouvementCaisse_Type.TypeMouvementCaisse_Libelle</td>}
                                                                    </tr>
                                                                    }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <!-- datatable ends -->
                                                </div>
                                            </section>
                                            <!-- table success ends -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </section>
            <!-- Dashboard Ecommerce ends -->
           @* <div class="breadcrumb-item text-sm-right">
                <a class="btn btn-outline-success round mr-1 mb-1" asp-action="MouvementsAll"><i class="bx bxs-detail"></i><span class="align-middle ml-25">Afficher la liste complete</span></a>
            </div>*@
        </div>
    </div>
</div>
<!-- END: Content-->
<div class="sidenav-overlay"></div>
<div class="drag-target"></div>
