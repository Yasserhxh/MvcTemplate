                                                                                <a class="dropdown-item" asp-action="BonDeSortie" asp-route-id="@item.Demande_BonDeSortieID"><i class="bx bx-detail"></i>Afficher le bon de sortie </a>
                                                                            </div>
                                                                        </div>

                                                                    </td>*@
                                                                    </tr>
}
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <!-- datatable ends -->
                                                </div>
                                            </section>
                                            <!-- table success ends -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </section>
            <!-- Dashboard Ecommerce ends -->
            <div class="breadcrumb-item text-sm-right">
                <a class="btn btn-outline-success round mr-1 mb-1" asp-action="RetourStock"><i class="bx bx-arrow-back"></i><span class="align-middle ml-25">Créer un retour de stock </span></a>
            </div>
        </div>
    </div>
</div>
<!-- END: Content-->
