                                                                                        <a class="dropdown-item" asp-action="BonDeSortie" asp-route-id="@item.Demande_BonDeSortieID"><i class="bx bx-detail"></i>Afficher le bon de sortie </a>
                                                                                    </div>
                                                                                </div>

                                                                            </td>
                                                                        }
                                                                        else if (item.Demande_Etat == "Livré")
