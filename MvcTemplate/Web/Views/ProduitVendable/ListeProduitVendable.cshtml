    function Details(Libelle) {
        console.log(Libelle)
        window.location.href = '@Url.Action("Consulter", "ProduitVendable")' + "?id=" + Libelle;
    }
           function refresh() {
        setTimeout(
            function () {
                window.location.href = '@Url.Action("ListeProduitVendable", "ProduitVendable")';
            }, 500);
        }
        function fct(Id) {
