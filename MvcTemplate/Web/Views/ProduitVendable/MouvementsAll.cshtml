@model IEnumerable<Domain.Models.MouvementStockModel>
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
@{
    ViewData["Title"] = "Gestion de Stockage";
}
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-12 mb-2 mt-1">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
@*                        <h5 class="content-header-title float-left pr-1 mb-0">Gestion de Stockage</h5>
*@                        <div class="breadcrumb-wrapper col-12">
                            <ol class="breadcrumb p-0 mb-0">
                                <li class="breadcrumb-item">
                                    <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="javascript:history.go(-1)"><i class="bx bxs-left-arrow-circle"></i></a>
                                </li>
                                <li class="breadcrumb-item active">
                                    <a asp-action="Mouvements">Liste des Mouvements</a>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Dashboard Ecommerce Starts -->
            <section id="dashboard-ecommerce">
                <div class="row">
                    <!-- Greetings Content Starts -->
                    <div class="col-xl-12 col-md-12 col-12 dashboard-greetings">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title"> Liste des Mouvements de stock </h4>
                                <a class="heading-elements-toggle">
                                    <i class="bx bx-dots-vertical font-medium-3"></i>
                                </a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li>
                                            <a data-action="collapse">
                                                <i class="bx bx-chevron-down"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-action="expand">
                                                <i class="bx bx-fullscreen"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-action="reload">
                                                <i class="bx bx-revision"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collapse show">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <!-- table success start -->
                                            <section id="table-success">
                                                <div class="card">
                                                    <!-- datatable start -->
                                                    <div class="table table-responsive  ">
                                                        <table id="table-Cartographie-Deposees" class="table mb-0">
                                                            <thead>
                                                                <tr>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Matiere Premiere</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap text-sm-left">Quantite</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap text-sm-left">Mouvement Type</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Date de mouvement</th>
                                                                    @*                                                                    <th>Action</th>
                                                                    *@
                                                                </tr>
                                                            </thead>
                                                            <tbody id="usertbody">
                                                                @foreach (var item in Model)
                                                                {

                                                        <tr>
                                                            <td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.MatierePremiere_Stokage.Matiere_Premiere.MatierePremiere_Libelle)</td>
                                                            @{ var qte = decimal.Parse(item.MouvementStock_Quantite.ToString()).ToString("G29");}
                                                            <td class="text-bold-600 pr-0 text-sm-left"> @qte @Html.DisplayFor(modelItem => item.Unite_Mesure.UniteMesure_Libelle)</td>
                                                            @if (item.MouvementStock_MouvementTypeId == 2)
                                                            {
                                                        <td class="text-bold-600 pr-0 text-danger text-sm-left">Sortie de Stock</td>
 }
                                                    else if (item.MouvementStock_MouvementTypeId == 1)
                                                    {
                                                        <td class="text-bold-600 pr-0 text-danger text-sm-left">Alimentation intra stock</td>
 }
                                                    else if (item.MouvementStock_MouvementTypeId == 3)
                                                    {
                                                        <td class="text-bold-600 pr-0 text-success text-sm-left">Réception fournisseur</td>
}

                                                            <td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.MouvementStock_DateSaisie)</td>

                                                        </tr>}
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <!-- datatable ends -->
                                                </div>
                                            </section>
                                            <!-- table success ends -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </section>
            <!-- Dashboard Ecommerce ends -->
        
        </div>
    </div>
</div>
<!-- END: Content-->
<div class="sidenav-overlay"></div>
<div class="drag-target"></div>
<script>
    Date.prototype.toDateInputValue = (function () {
        var local = new Date(this);
        local.setMinutes(this.getMinutes() - this.getTimezoneOffset());
        return local.toJSON().slice(0, 10);
    });
    document.getElementById('date').value = new Date().toDateInputValue();

</script>
