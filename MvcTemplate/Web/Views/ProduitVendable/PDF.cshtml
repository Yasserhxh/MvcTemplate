                    <td colspan="2">Date de création :</td>
                </tr>
                <tr>
                    <td style="font-size: 22px" class="text-left" width="35%">Atelier Marocain de Gourmandises</td>
                    <td>Version <br> @Model.fichetechnique.FicheTechniqueBridge_DateCreation.ToString("dd/MM/yyyy")</td>
                  @*  <td>Maj <br> 06-09-2019</td>*@
                </tr>
            </tbody>
        </table>

        <table class="entet" style="margin: 20px 0">
            <tbody>
                <tr>
                    @{
                        var str = "https://trephodev.azurewebsites.net/" + Model.fichetechnique.Produit_Vendable.ProduitVendable_GrandePhoto;
                    }
                    <td style="width: 30%"><img src="@str" alt="" width="250" /></td>
                    <td  style="padding: 6px 0; line-height: 40px; font-size: 30px">@Model.fichetechnique.Produit_Vendable.ProduitVendable_Designation.ToUpper() <br> 
                        (Pour  @foreach (var item in Model.fichetechnique.Fiche_Forme)
                        {
                            @(item.FicheForme_Quantite.ToString("G29") + " " + item.Forme_Produit.FormeProduit_Libelle + "  ")
                        })
                    </td>
                </tr>
            </tbody>
        </table>




        <h4>Liste d'ingrédients :</h4>
        <table class="titable">
            <thead>
                <tr>
                    <th width="15%">Code</th>
                    <th width="55%">Designation</th>
                    <th width="15%">Quantite</th>
                    <th width="15%">Condtionnement</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.fichetechnique.Produit_FicheTechnique)
                {
                    <tr>
                        <td>&nbsp; @item.Matiere_Premiere.MatierePremiere_CodeArticle</td>
                        <td>&nbsp; @item.Matiere_Premiere.MatierePremiere_Libelle</td>
                        <td class="text-right"> @item.FicheTechnique_QuantiteMatiere.ToString("G29") &nbsp;</td>
                        <td class="text-center"> @item.Unite_Mesure.UniteMesure_Libelle &nbsp;</td>
                    </tr>
                }
            </tbody>
        </table>

        @foreach (var item in Model.fichetechniqueBase)
        {
            <h5>@item.ProduitBase.ProduitBase_Designation</h5>
            <table class="titable">
                <thead>
                    <tr>
                        <th width="15%"></th>
                        <th width="55%">Designation</th>
                        <th width="15%">Quantite</th>
                        <th width="15%">Condtionnement</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item2 in item.ProduitBase_FicheTechnique){
                        <tr>
                            <td>&nbsp;</td>
                            <td>&nbsp; @item2.Matiere_Premiere.MatierePremiere_Libelle</td>
                            <td class="text-right">&nbsp; @item2.ProduitBaseFicheTechnique_QuantiteMatiere.ToString("G29") &nbsp;</td>
                            <td class="text-center">&nbsp; @item2.Unite_Mesure.UniteMesure_Libelle &nbsp;</td>
                        </tr>
                    }

                </tbody>
            </table>
        }
        <h5>Conditionnement :</h5>
        <table class="titable">
            <thead>
                <tr>
                    <th width="25%">Description emballage</th>
                    <th width="25%">Poids unitaire</th>
                    <th width="25%">Quantite par caisse</th>
                    <th width="25%">Poids net</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>&nbsp; @Model.fichetechnique.Produit_Vendable.ProduitVendable_Conditionnement</td>
                    <td>&nbsp;@Model.fichetechnique.Produit_Vendable.ProduitVendable_Specification</td>
                    <td>1</td>
                    <td>1</td>
                </tr>





            </tbody>
        </table>
        <h4>Allergènes :</h4>
        <ul>
            @if(Model.allergenes !=null){
                @foreach (var item in Model.allergenes)
                {

                    <li>@item.Allergene_Libelle</li>
                }
            }

            <li>Céréales contenant du gluten</li>
            <li>Oeufs et produits à base d'oeufs</li>
            <li>Soja et produits à base de soja</li>
            <li>Lait et produits à base de lait</li>
            <li>Fruits à coque</li>
        </ul>
    </div>
</body>
</html>