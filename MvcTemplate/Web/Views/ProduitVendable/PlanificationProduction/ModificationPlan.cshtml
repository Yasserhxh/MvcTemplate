@{ ViewData["Title"] = "Produits Vendable ";
    Layout = "~/Views/Shared/_Layout1.cshtml"; }

@model Domain.Models.PlanificationdeProductionModel

@{ ViewData["Title"] = "Planification de Production"; }


<div class="app-content content">
    <div class="content-header row">
        <div class="content-header-left col-12 mb-2 mt-1">
            <div class="row breadcrumbs-top">
                <div class="col-12">
                    <h5 class="content-header-title float-left pr-1 mb-0">Gestion des Produits Vendable</h5>
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb p-0 mb-0">
                            <li class="breadcrumb-item">
                                <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="javascript:history.go(-1)"><i class="bx bxs-left-arrow-circle"></i></a>
                            </li>
                            <li class="breadcrumb-item active">
                                <a asp-action="ListeProduitVendable">Liste des Produits Vendable</a>
                            </li>

                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section id="basic-form-layouts">
        <div class="card">
            <div class="card-header">
                <div class="card-title-wrap bar-success">
                    <h4 class="card-title" id="basic-layout-form">Planification de production </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="px-3">
                    <form class="form" action="ModificationPlan" method="post">
                        <div class="form-body">
                            <h4 class="form-section">
                                <i class="bx bx-detail"></i> Details.
                            </h4>
                            <div class="form-group">
                                <label for="FamilleProduit"> Famille de Produit</label>
                                <div>
                                    <select class="custom-select" id="inputGroupSelected" data-search="true" asp-for="PlanificationProduction_ProduitVendableId" asp-items="@ViewBag.PlanificationProduction_ProduitVendableId">
                                        <option value="" selected>Choisir un produit ...</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="Date">Date de Production</label>
                                        <input type="date" asp-for="PlanificationProduction_Date" class="form-control" required />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="StockMin">Quantite Prevue</label>
                                        <div>
                                            <input type="number" min="0" value="0" step=".01" asp-for="PlanificationProduction_QuantitePrevue" class="form-control" required />

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="Stock Max">Quantite Produite</label>
                                        <input type="number" min="0" value="0" step=".01" asp-for="PlanificationProduction_QuantiteProduite" class="form-control" required />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <a class="btn btn-danger" asp-action="ListeProduitVendable">
                                Annuler
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="icon-note"></i> Ajouter
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </section>
</div>
<script>

    @if (TempData["Creation"] != null)
    {
        <text>CreationNotifications();</text>
    }

    @if (TempData["CreationError"] != null)
    {
        <text>ModificationNotifications();</text>
    }
    function CreationNotifications()
    {
        ShowNotification("Produit enregistré avec succés.", NotifToaster.SucessType, NotifToaster.Top_Full_Width);
    }

    function ModificationNotifications()
    {
        ShowNotification("Une error s'est produite.", NotifToaster.SucessType, NotifToaster.Top_Full_Width);
    }
</script>