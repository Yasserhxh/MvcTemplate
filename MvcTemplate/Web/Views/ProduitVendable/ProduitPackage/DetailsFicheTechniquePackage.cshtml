@{ Layout = "~/Views/Shared/_Layout1.cshtml"; }
@{ ViewData["Title"] = "Fiches Technique"; }
@model IEnumerable<Domain.Models.PackageForme_DetailsModel>
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-12 mb-2 mt-1">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <div class="breadcrumb-wrapper col-12">
                            <ol class="breadcrumb p-0 mb-0">
                                <li class="breadcrumb-item">
                                    <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="javascript:history.go(-1)"><i class="bx bxs-left-arrow-circle"></i></a>
                                </li>
                                <li class="breadcrumb-item active">
                                    <a asp-action="FicheTechPackage">Liste des fiches techniques</a>
                                </li>

                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Dashboard Ecommerce Starts -->
            <section id="dashboard-ecommerce">
                <div class="row">
                    <!-- Greetings Content Starts -->
                    <div class="col-xl-12 col-md-12 col-12 dashboard-greetings">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title"> Détails de la fiche technique de "@Model.FirstOrDefault().Package_Forme.ProduitPackage.ProduitPackage_Designation" </h4>
                                <a class="heading-elements-toggle">
                                    <i class="bx bx-dots-vertical font-medium-3"></i>
                                </a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li>
                                            <a data-action="collapse">
                                                <i class="bx bx-chevron-down"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-action="expand">
                                                <i class="bx bx-fullscreen"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-action="reload">
                                                <i class="bx bx-revision"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collapse show">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <!-- table success start -->
                                            <section id="table-success">
                                                <div class="card">
                                                    <!-- datatable start -->
                                                    <div class="table-responsive  ">
                                                        <table id="table-Cartographie-Deposees" class="table mb-0">
                                                            <thead>
                                                                <tr>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">produit</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">forme</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">quantité</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">unité de mesure</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="usertbody">
                                                                @foreach (var item in Model)
                                                                {
                                                                    if (item.Sous_ProduitPackage.Forme_Produit.Produit_Vendable != null)
                                                                    {
                                                                        <tr>
                                                                            <td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.Sous_ProduitPackage.Forme_Produit.Produit_Vendable.ProduitVendable_Designation)</td>
                                                                            <td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.Sous_ProduitPackage.Forme_Produit.FormeProduit_Libelle)</td>
                                                                            <td class="text-bold-600 pr-0">@item.PackageFormeDetails_Quantite.ToString("G29")</td>
                                                                            <td class="text-bold-600 pr-0">@item.Sous_ProduitPackage.Forme_Produit.Produit_Vendable.Unite_Mesure.UniteMesure_Libelle</td>
                                                                        </tr>
                                                                    }
                                                                    if (item.Sous_ProduitPackage.Forme_Produit.Produit_PretConsomer != null)
                                                                    {
                                                                        <tr>
                                                                            <td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.Sous_ProduitPackage.Forme_Produit.Produit_PretConsomer.ProduitPretConsomer_Designation)</td>
                                                                            <td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.Sous_ProduitPackage.Forme_Produit.FormeProduit_Libelle)</td>
                                                                            <td class="text-bold-600 pr-0">@item.PackageFormeDetails_Quantite.ToString("G29")</td>
                                                                            <td class="text-bold-600 pr-0">@item.Sous_ProduitPackage.Forme_Produit.Produit_PretConsomer.Unite_Mesure.UniteMesure_Libelle</td>
                                                                        </tr>
                                                                    }
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <!-- datatable ends -->
                                                </div>
                                            </section>
                                            <!-- table success ends -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </section>
            <!-- Dashboard Ecommerce ends -->

        </div>
    </div>
</div>
<!-- END: Content-->
<div class="sidenav-overlay"></div>
<div class="drag-target"></div>
<script src="~/js/sweetalert.min.js"></script>
<script src="~/js/sweetalert2.min.js"></script>
<script>

    function deleteFicheTechnique(id)
    {
             swal({
            title: "Êtes-vous sûr?",
            text: "Le mot de passe sera réinitialisé",
            type: "warning",
            showCancelButton: true,
            confirmButtonText: "Oui",
            cancelButtonText: "Annuler",
            closeOnConfirm: false,
            closeOnCancel: true
        },
            function (isConfirm) {
                if (isConfirm) {

                    var data = {
                        id: id,
                    };
                    $.ajax({
                        url: '@Url.Action("DeleteFicheTechnique", "FicheTechnique")',
                        type: "POST",
                        cache: false,
                        async: true,
                        data: data,
                        success: function (data) {
                            if (data == true) {
                                swal("Spprimé!", "Fiche technique supprimée", "success");
                                setTimeout(
                                    function () {
                                        window.location.reload();
                                    }, 2000);
                            } else {
                                swal("Non Spprimé!", "la fiche technique n'a pas été supprimée", "error");
                            }
                        },
                        error: function () {
                            swal("Non Spprimé!", "la fiche technique n'a pas été supprimée", "error");
                        }
                        });
                }
            }
        );
    }
</script>

