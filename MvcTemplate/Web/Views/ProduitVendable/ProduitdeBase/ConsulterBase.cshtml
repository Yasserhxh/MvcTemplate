@{ Layout = "~/Views/Shared/_Layout1.cshtml"; }
@{ ViewData["Title"] = "Fiches Techniques de base"; }
@model IEnumerable<Domain.Models.FicheTehcniqueProduitBaseModel>

<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-12 mb-2 mt-1">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <div class="breadcrumb-wrapper col-12">
                            <ol class="breadcrumb p-0 mb-0">
                                <li class="breadcrumb-item">
                                    <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="javascript:history.go(-1)"><i class="bx bxs-left-arrow-circle"></i></a>
                                </li>
                                <li class="breadcrumb-item active">
                                    <a asp-action="ListeProduitBase">Liste des produits de base</a>
                                </li>
                                <li class="breadcrumb-item active">
                                    <a>Fiches techniques</a>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Dashboard Ecommerce Starts -->
            <section id="dashboard-ecommerce">
                <div class="row">
                    <!-- Greetings Content Starts -->
                    <div class="col-xl-12 col-md-12 col-12 dashboard-greetings">
                        <div class="card">
                            <div class="card-header">
                                @{ var a = @Model.FirstOrDefault(); }
                                @if (a == null)
                                {
                                    <h4 class="card-title">Aucune fiche technique est associée à ce produit</h4>
                                }
                                else
                                {
                                    <h4 class="card-title">Liste des fiches techniques de "@a.ProduitBase.ProduitBase_Designation"</h4>
                                }
                                <a class="heading-elements-toggle">
                                    <i class="bx bx-dots-vertical font-medium-3"></i>
                                </a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li>
                                            <a data-action="collapse">
                                                <i class="bx bx-chevron-down"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-action="expand">
                                                <i class="bx bx-fullscreen"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-action="reload">
                                                <i class="bx bx-revision"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collapse show">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <!-- table success start -->
                                            <section id="table-success">
                                                <div class="card">
                                                    <!-- datatable start -->
                                                    <div class="table  ">
                                                        <table id="table-Cartographie-Deposees" class="table mb-0">
                                                            <thead>
                                                                <tr>

                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Libellé</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Produit de base</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Quantité</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Unité de mesure</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Coût de Revient</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Active</th>
                                                                    <th>Actions</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="usertbody">
                                                                @foreach (var item in Model)
                                                                {

                                                                <tr>
                                                                    <td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.FicheTechniqueProduitBase_Libelle)</td>
                                                                    <td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.ProduitBase.ProduitBase_Designation)</td>
                                                                    <td class="text-bold-600 pr-0">@item.FicheTechniqueProduitBase_QuantiteProd.ToString("G29")</td>
                                                                    <td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.Unite_Mesure.UniteMesure_Libelle)</td>
                                                                    <td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.FicheTechniqueProduitBase_CoutDeRevient) DH </td>
                                                                    <td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.FicheTechniqueProduitBase_InUse)</td>
                                                                    <td>
                                                                        <div class="dropdown">
                                                                            <span class="bx bx-dots-horizontal-rounded font-medium-3 dropdown-toggle nav-hide-arrow cursor-pointer" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" role="menu">
                                                                            </span>
                                                                            <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 19px, 0px);" x-out-of-boundaries="">

                                                                                <button class="dropdown-item  btn-outline-success" onclick="setInUse(@item.FicheTechniqueProduitBase_ID)"><i class="bx bx-check"></i>Activer</button>
                                                                                <a class="dropdown-item  btn-outline-light" asp-controller="FicheTechnique" asp-action="DetailsBase" asp-route-id="@item.FicheTechniqueProduitBase_ID"><i class="bx bx-detail"></i>Afficher les détails</a>
                                                                            </div>
                                                                        </div>

                                                                    </td>





                                                                </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <!-- datatable ends -->
                                                </div>
                                            </section>
                                            <!-- table success ends -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </section>
            <!-- Dashboard Ecommerce ends -->
            <div class="breadcrumb-item text-sm-right">
                <a class="btn btn-outline-success round mr-1 mb-1" asp-controller="FicheTechnique" asp-action="AjouterFicheBase"><i class="bx bx-dish"></i><span class="align-middle ml-25">Ajouter une fiche technique </span></a>
            </div>
        </div>
    </div>
</div>
<script>
     function setInUse(id)
    {
            var data = { id: id };
            $.ajax({
                url: '@Url.Action("SetInUseBase", "FicheTechnique")',
                type: "POST",
                cache: false,
                async: true,
                data: data,
                success: function (data) {
                    if (data == true) {
                        ShowNotification("Success", NotifToaster.SucessType, NotifToaster.Top_Full_Width);
                        setTimeout(
                            function () {
                                window.location.reload();
                                if ($("#usertbody tr").length == 0) {
                                    document.getElementById('usertable').style.display = "none";
                                }
                                }, 1000);

                    } else {
                        ShowNotification("Une erreur s'est produite!", NotifToaster.ErrorType, NotifToaster.Top_Full_Width);
                        setTimeout(
                            function () {
                                   window.location.reload();
                                }, 1000);
                    }
                },
                error: function () {
                    alert("non supprime");
                }
            });
    }

</script>
