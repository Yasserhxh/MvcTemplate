@model IEnumerable<Domain.Models.RetourDetailsModel>
@{ Layout = "~/Views/Shared/_Layout1.cshtml"; }
@{ ViewData["Title"] = "Liste des retours"; }
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-12 mb-2 mt-1">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <div class="breadcrumb-wrapper col-12">
                            <ol class="breadcrumb p-0 mb-0">
                                <li class="breadcrumb-item">
                                    <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="javascript:history.go(-1)"><i class="bx bxs-left-arrow-circle"></i></a>
                                </li>
                                <li class="breadcrumb-item active">
                                    <a asp-area="">Liste des retours des produits</a>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Dashboard Ecommerce Starts -->
            <section id="dashboard-ecommerce">
                <div class="row">
                    <!-- Greetings Content Starts -->
                    <div class="col-xl-12 col-md-12 col-12 dashboard-greetings">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Détails de retour</h4>
                                <a class="heading-elements-toggle">
                                    <i class="bx bx-dots-vertical font-medium-3"></i>
                                </a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li>
                                            <a data-action="collapse">
                                                <i class="bx bx-chevron-down"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-action="expand">
                                                <i class="bx bx-fullscreen"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-action="reload">
                                                <i class="bx bx-revision"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collapse show">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <!-- table success start -->
                                            <section id="table-success">
                                                <div class="card">
                                                    <!-- datatable start -->
                                                    <div class="table">
                                                        <table id="table-Cartographie-Deposees" class="table mb-0">
                                                            <thead>
                                                                <tr>

                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap text-sm-left">Produit</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Forme</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Quantité</th>
                                                                    @*<th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Coût de revient unitaire</th>*@
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Prix Total</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="usertbody">
                                                                @foreach (var item in Model)
                                                                {
                                                                    if (item.Forme_Produit.Produit_Vendable != null)
                                                                    {
                                                                <tr>
                                                                    <td class="text-bold-600 pr-0 text-sm-left">@Html.DisplayFor(modelItem => item.Forme_Produit.Produit_Vendable.ProduitVendable_Designation)</td>
                                                                    <td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.Forme_Produit.FormeProduit_Libelle)</td>
                                                                    @{ var qte = decimal.Parse(item.RetourDetails_Quantite.ToString()).ToString("G29");}
                                                                    <td class="text-bold-600 pr-0">@qte @item.Unite_Mesure.UniteMesure_Libelle</td>
                                                                    @*<td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.RetourDetails_PrixProduit) DH</td>*@
                                                                    <td class="text-bold-600 pr-0">@item.RetourDetails_PrixTotal DH</td>
                                                                </tr> }
                                                                    if (item.Forme_Produit.Produit_PretConsomer != null)
                                                                    {
                                                            <tr>
                                                                <td class="text-bold-600 pr-0 text-sm-left">@Html.DisplayFor(modelItem => item.Forme_Produit.Produit_PretConsomer.ProduitPretConsomer_Designation)</td>
                                                                <td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.Forme_Produit.FormeProduit_Libelle)</td>
                                                                @{ var qte = decimal.Parse(item.RetourDetails_Quantite.ToString()).ToString("G29");}
                                                                <td class="text-bold-600 pr-0">@qte @item.Unite_Mesure.UniteMesure_Libelle</td>
                                                                @*<td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.RetourDetails_PrixProduit) DH</td>*@
                                                                <td class="text-bold-600 pr-0">@item.RetourDetails_PrixTotal DH</td>
                                                            </tr> }
                                                                    if (item.Forme_Produit.ProduitPackage != null)
                                                                    {
                                                            <tr>
                                                                <td class="text-bold-600 pr-0 text-sm-left">@Html.DisplayFor(modelItem => item.Forme_Produit.ProduitPackage.ProduitPackage_Designation)</td>
                                                                <td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.Forme_Produit.FormeProduit_Libelle)</td>
                                                                @{ var qte = decimal.Parse(item.RetourDetails_Quantite.ToString()).ToString("G29");}
                                                                <td class="text-bold-600 pr-0">@qte @item.Unite_Mesure.UniteMesure_Libelle</td>
                                                                @*<td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.RetourDetails_PrixProduit) DH</td>*@
                                                                <td class="text-bold-600 pr-0">@item.RetourDetails_PrixTotal DH</td>
                                                            </tr>}


                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <!-- datatable ends -->
                                                </div>
                                            </section>
                                            <!-- table success ends -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </section>
            <!-- Dashboard Ecommerce ends -->

        </div>
    </div>
</div>
<!-- END: Content-->
<div class="sidenav-overlay"></div>
<div class="drag-target"></div>
<script></script>