@model IEnumerable<Domain.Models.Zone_StockageModel>
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
@{
    ViewData["Title"] = "Zones de stockage";
}
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-12 mb-2 mt-1">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <div class="breadcrumb-wrapper col-12">
                            <ol class="breadcrumb p-0 mb-0">
                                <li class="breadcrumb-item">
                                    <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="javascript:history.go(-1)"><i class="bx bxs-left-arrow-circle"></i></a>
                                </li>
                                <li class="breadcrumb-item active">
                                    <a asp-action="ListeZoneStockage">Liste des zones de stockage</a>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Dashboard Ecommerce Starts -->
            <section id="dashboard-ecommerce">
                <div class="row">
                    <!-- Greetings Content Starts -->
                    <div class="col-xl-12 col-md-12 col-12 dashboard-greetings">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title"> Liste des zones de stockage </h4>
                                <a class="heading-elements-toggle">
                                    <i class="bx bx-dots-vertical font-medium-3"></i>
                                </a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li>
                                            <a data-action="collapse">
                                                <i class="bx bx-chevron-down"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-action="expand">
                                                <i class="bx bx-fullscreen"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-action="reload">
                                                <i class="bx bx-revision"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collapse show">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <!-- table success start -->
                                            <section id="table-success">
                                                <div class="card">
                                                    <!-- datatable start -->
                                                    <div class="table-responsive">
                                                        <table id="table-Cartographie-Deposees" class="table mb-0">
                                                            <thead>
                                                                <tr>

                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Désignation</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap text-sm-left">Point de Stockage</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap text-sm-left">Forme de Stockage</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Capacité de Stockage</th>
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap text-sm-left">Unité de mesure</th>
                                                                    @*                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap text-sm-left">Type de Contenu</th>
                                                                    *@
                                                                    <th class="border-b-2 dark:border-dark-5 whitespace-no-wrap">Statut</th>
                                                                    <th><span style="margin-left:15%">Actions</span></th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="usertbody">
                                                                @foreach (var item in Model)
                                                                {
                                                                    <tr>
                                                                        <td class="text-bold-600 pr-0">@Html.DisplayFor(modelItem => item.ZoneStockage_Designation)</td>
                                                                        <td class="text-bold-600 pr-0 text-sm-left">@Html.DisplayFor(modelItem => item.Lieu_Stockage.LieuStockag_Nom)</td>
                                                                        <td class="text-bold-600 pr-0 text-sm-left">@Html.DisplayFor(modelItem => item.Forme_Stockage.FormStockage_Libelle)</td>
                                                                        @*                                                                    @{ var qte = decimal.Parse(item.ZoneStockage_CapaciteStockage.ToString()).ToString("G29");}
                                                                        *@
                                                                        <td class="text-bold-600 pr-0">@item.ZoneStockage_CapaciteStockage</td>
                                                                        <td class="text-bold-600 pr-0 text-sm-left">@Html.DisplayFor(modelItem => item.Unite_Mesure.UniteMesure_Libelle)</td>
                                                                        @*                                                                    <td class="text-bold-600 pr-0 text-sm-left">@Html.DisplayFor(modelItem => item.Type_Contenu.TypeContenu_Libelle)</td>
                                                                        *@
                                                                        <td class="text-bold-600 pr-0 text-sm-left">@(item.ZoneStockage_IsActive == 0 ? "Désactivé" : "Activé")</td>
                                                                        <td>
                                                                            <a class="btn btn-outline-secondary btn-table round" asp-action="ModificationZone" asp-route-id="@item.ZoneStockage_Id"><i class="bx bx-pencil"></i> </a>
                                                                            @if (item.ZoneStockage_IsActive == 1)
                                                                            {
                                                                                <button class="btn btn-outline-google btn-table round" onclick="DeleteZoneStockage(@item.ZoneStockage_Id, 0)"><i class="bx bx-trash-alt"></i> </button>
                                                                            }
                                                                            else
                                                                            {
                                                                                <button class="btn btn-outline-facebook btn-table round" onclick="DeleteZoneStockage(@item.ZoneStockage_Id, 1)"><i class="bx bx-redo"></i> </button>
                                                                            }
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <!-- datatable ends -->
                                                </div>
                                            </section>
                                            <!-- table success ends -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </section>
            <!-- Dashboard Ecommerce ends -->
            <div class="breadcrumb-item text-sm-right ">
                <a class="btn btn-outline-success round mr-1 mb-1" asp-action="AjouterZone"><i class="bx bx-user-plus"></i><span class="align-middle ml-25">Ajouter une zone de stockage</span></a>
            </div>
        </div>
    </div>
</div>
<!-- END: Content-->
<div class="sidenav-overlay"></div>
<div class="drag-target"></div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/sweetalert.min.js"></script>
<script src="~/js/sweetalert2.min.js"></script>
<script>
    function DeleteZoneStockage(id, code) {
        var data = {
            id: id,
            code: code
        };
    //    console.log(code);
        if (code == 0) {
            console.log(code);
            swal({
                title: "Êtes-vous sûr?",
                text: "La zone de stockage sera désactivéé",
                type: "warning",
                showCancelButton: true,
                confirmButtonText: "Oui",
                cancelButtonText: "Annuler",
                closeOnConfirm: false,
                closeOnCancel: true
            },
                function (isConfirm) {
                    if (isConfirm) {
                        $.ajax({
                            url: '@Url.Action("deleteZoneStockage", "Stockages")',
                            type: "POST",
                            cache: false,
                            async: true,
                            data: data,
                            success: function (data) {
                                if (data == true) {
                                    swal("Spprimé!", " La zone de stockage a été désactivée", "success");
                                    setTimeout(
                                        function () {
                                            window.location.reload();
                                        }, 2000);
                                } else {
                                    swal("Non Spprimé!", "Impossible de désactiver cette zone, car elle contient une ou plusieurs matières premières", "error");
                                }
                            },
                            error: function () {
                                swal("Non Spprimé!", "La matière première n'a pas été supprimée", "error");
                            }
                        });
                    }
                }
            );
        } else {
            $.ajax({
                url: '@Url.Action("deleteZoneStockage", "Stockages")',
                type: "POST",
                cache: false,
                async: true,
                data: data,
                success: function (data) {
                    if (data == true) {
                        ShowNotification("La zone a été reactivée avec success !", NotifToaster.success, NotifToaster.Top_Full_Width);
                        setTimeout(
                            function () {
                                window.location.reload();
                            }, 2000);
                    } else {
                        ShowNotification("Une erreur s'est produite!", NotifToaster.ErrorType, NotifToaster.Top_Full_Width);
                        setTimeout(
                            function () {
                                window.location.reload();
                            }, 2000);
                    }
                },
                error: function () {
                    swal("Non Spprimé!", "La matière première n'a pas été supprimée", "error");
                }
            });
        }

        }
</script>
